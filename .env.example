# ============================================
# BANCO DE DADOS
# ============================================
# Para produção no Vercel, use PostgreSQL/MySQL
DATABASE_URL="postgresql://username:password@localhost:5432/atacado_celular"

# Para desenvolvimento local (SQLite)
# DATABASE_URL="file:./dev.db"

# Para Vercel com Neon/PlanetScale/etc
# DATABASE_URL="postgresql://user:pass@hostname:5432/dbname?sslmode=require"

# ============================================
# AUTENTICAÇÃO (NextAuth.js)
# ============================================
# URL base da aplicação (mude para seu domínio em produção)
NEXTAUTH_URL="https://seu-dominio.vercel.app"

# Chave secreta para JWT - GERE UMA NOVA PARA PRODUÇÃO
# Use: openssl rand -base64 32
NEXTAUTH_SECRET="sua-chave-secreta-muito-segura-aqui-gere-uma-nova"

# ============================================
# CLOUDINARY (Upload de Imagens)
# ============================================
# Nome do seu cloud no Cloudinary
CLOUDINARY_CLOUD_NAME="seu-cloud-name"

# API Key do Cloudinary
CLOUDINARY_API_KEY="sua-api-key"

# API Secret do Cloudinary
CLOUDINARY_API_SECRET="seu-api-secret"

# ============================================
# META PIXEL (Facebook Analytics)
# ============================================
# ID do seu Meta Pixel para tracking de conversões
NEXT_PUBLIC_META_PIXEL_ID="seu-meta-pixel-id"

# Token de acesso para Conversions API (opcional)
META_ACCESS_TOKEN="seu-meta-access-token"

# ============================================
# EVOLUTION API (WhatsApp Business)
# ============================================
# URL da sua instância Evolution API
EVOLUTION_API_URL="https://sua-evolution-api-url.com"

# Chave de API da Evolution
EVOLUTION_API_KEY="sua-evolution-api-key"

# Nome da instância do WhatsApp
EVOLUTION_INSTANCE="atacado"

# ============================================
# CONFIGURAÇÕES DE EMAIL (Opcional)
# ============================================
# Para notificações via email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="seu-email@gmail.com"
SMTP_PASS="sua-app-password"

# ============================================
# CONFIGURAÇÕES GERAIS
# ============================================
# Ambiente (development, production)
NODE_ENV="production"

# URL base para webhooks
WEBHOOK_URL="https://seu-dominio.vercel.app/api"

# Chave para validação de webhooks
WEBHOOK_SECRET="sua-webhook-secret"

# ============================================
# CONFIGURAÇÕES DE PERFORMANCE
# ============================================
# Habilitar análise de bundle
ANALYZE="false"

# Habilitar logs detalhados
DEBUG="false"